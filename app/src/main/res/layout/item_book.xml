<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBookCover"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_margin="4dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/ivBookCover"
        android:text="Title"
        android:textSize="24dp" />
    <TextView
        android:id="@+id/releasedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/ivBookCover"
        android:layout_below="@+id/tvTitle"
        android:text="@string/date"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/release_date"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/releasedate"
        android:layout_below="@+id/tvTitle"
        android:text="release"/>
    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/ivBookCover"
        android:layout_below="@+id/release_date"
        android:text="Overview"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/RateText"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivBookCover"
        android:text="TheMovie DB rating"
        android:layout_margin="4dp"
        android:textSize="8dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvVoteAvs"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/RateText"
        android:text="Vote_Average"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:textSize="16sp"
        />
</RelativeLayout>